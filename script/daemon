require File.dirname(__FILE__) + "/../config/boot"
require 'rubygems'
require 'daemons'

Daemons.run(
                  Rails.root.join("script", "bot.rb"),
                  :app_name => "DiRT Rally Leagues Bot",
                  :dir_mode => :script,
                  :dir => "../log",
                  :multiple => true,
                  :keep_pid_files => false
)
